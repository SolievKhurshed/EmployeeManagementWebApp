@model EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Подробно о сотруднике";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index" class="text-primary">Главная</a>
        </li>
        <li class="breadcrumb-item" aria-current="page">
            <a asp-controller="Employee" asp-action="Index" class="text-primary">Сотрудники</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Подробнее</li>
    </ol>
</nav>

<h3>Подробно о сотруднике</h3>

<div class="card border-info">
    <div class="card-header bg-info text-white">
        Детальная информация о сотруднике
        <a class="btn btn-warning" asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@Model.Id">Изменить реквизиты</a>
        <a class="btn btn-warning" asp-controller="Employee" asp-action="AddMobilePhone" asp-route-id="@Model.Id">Добавить телефон</a>
        <a class="btn btn-warning" asp-controller="Employee" asp-action="AddPositionToEmployee" asp-route-id="@Model.Id">Добавить должность</a>        
    </div>
    <div class="card-body">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="MiddleName"></label>
                <input asp-for="MiddleName" class="form-control" readonly />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Group"></label>
                <input asp-for="Group" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Department"></label>
                <input asp-for="Department" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" readonly />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Login"></label>
                <input asp-for="Login" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ExtensionPhone"></label>
                <input asp-for="ExtensionPhone" class="form-control" readonly />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="BithDate"></label>
                <input asp-for="BithDate" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="EmploymentDate"></label>
                <input asp-for="EmploymentDate" class="form-control" readonly />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="MobilePhone"></label>
                <input asp-for="MobilePhone" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>



