@model AddEmployeeViewModel

@{
    ViewData["Title"] = "Добавить сотрудника";

    var group = ViewBag.Group;
    var position = ViewBag.Position;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index" class="text-primary">Главная</a>
        </li>
        <li class="breadcrumb-item" aria-current="page">
            <a asp-controller="Employee" asp-action="AddEmployee" class="text-primary">Добавить сотрудника</a>
        </li>
    </ol>
</nav>

<h3>Добавить нового сотрудника</h3>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="card border-primary">
    <div class="card-header bg-primary text-white">Необходимо заполнить следующие поля</div>
    <div class="card-body">
        <form asp-action="AddEmployee" method="post">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" maxlength="100" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" maxlength="100" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="MiddleName"></label>
                    <input asp-for="MiddleName" class="form-control" maxlength="100" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Login"></label>
                    <input asp-for="Login" class="form-control" maxlength="50" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" maxlength="50" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ExtensionPhone"></label>
                    <input asp-for="ExtensionPhone" class="form-control" pattern="[0-9]{4}" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="EmploymentDate"></label>
                    <input asp-for="EmploymentDate" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="MobilePhone"></label>
                    <input asp-for="MobilePhone" class="form-control" maxlength="12" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GroupValue"></label>
                    <select asp-for="GroupValue" asp-items="@(new SelectList(group, "Text", "Value"))" class="form-control">
                        <option disabled selected value="">Выберите группу</option>
                    </select>
                    <input type="hidden" asp-for="GroupValue" value="@group" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PositionValue"></label>
                    <select asp-for="PositionValue" asp-items="ViewBag.Position" class="form-control">
                        <option disabled selected value="">Выберите должность</option>
                    </select>
                    <input type="hidden" asp-for="PositionValue" value="@position" />
                </div>
            </div>

            <div class="card-footer bg-transparent">
                <button asp-controller="Employee" asp-action="AddEmployee" type="submit" class="btn btn-primary">Создать</button>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Отменить</a>
            </div>
        </form>
    </div>
</div>


