@model EditGroupViewModel

@{
    ViewData["Title"] = "EditGroup";
    var dep = ViewBag.Department;
}

<h3>Изменить реквизиты группы</h3>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="card border-primary">
    <div class="card-header bg-primary text-white">Необходимо заполнить следующие поля</div>
    <div class="card-body">
        <form asp-action="AddGroup" method="post">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" maxlength="255" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" maxlength="50" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DepartmentValue"></label>
                    <select asp-for="DepartmentValue" asp-items="@(new SelectList(dep, "Text", "Value"))" class="form-control">
                        <option disabled selected value="">@ViewBag.CurrentDepartment</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" maxlength="1024"></textarea>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <button asp-controller="Group" asp-action="EditGroup" type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-controller="Group" asp-action="Index" class="btn btn-secondary">Отменить</a>
            </div>
        </form>
    </div>
</div>