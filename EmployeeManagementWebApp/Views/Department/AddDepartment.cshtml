@model AddDepartmentViewModel

@{
    ViewData["Title"] = "Добавить новый отдел";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index" class="text-primary">Главная</a>
        </li>
        <li class="breadcrumb-item" aria-current="page">
            <a asp-controller="Department" asp-action="AddDepartment" class="text-primary">Добавить отдел</a>
        </li>
    </ol>
</nav>

<h3>Добавить новый отдел</h3>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="card border-primary">
    <div class="card-header bg-primary text-white">Необходимо заполнить следующие поля</div>
    <div class="card-body">
        <form asp-action="AddDepartment" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" maxlength="255" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" maxlength="50" />
                </div>                
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" maxlength="1024"></textarea>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <button asp-controller="Department" asp-action="AddDepartment" type="submit" class="btn btn-primary">Создать</button>
                <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Отменить</a>
            </div>
        </form>
    </div>
</div>
